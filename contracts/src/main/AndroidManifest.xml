<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ir.nik.contracts">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">

        <activity
            android:name="ir.nik.contract.view.gateway.ContractsGatewayActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:noHistory="true"
            android:exported="false" />

        <activity
            android:name="ir.nik.contract.view.contracts.ContractActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />

        <activity
            android:name="ir.nik.contract.view.attachment.ContractsAttachmentActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
    </application>
</manifest>